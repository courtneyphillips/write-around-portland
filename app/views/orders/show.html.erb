<h2>Order Summary:</h2>

<table class="table">
  <thead>
    <td>Publication</td>
    <td>Price</td>
    <td>Quantity</td>
  </thead>
  <tbody>
    <% @order.publications.each do |publication| %>
      <tr>
        <td><%= publication.title %></td>
        <td><%= format_money(publication.price) %></td>
        <td><%= @order.quantity(publication) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h3>Total: <%= format_money(@order.total) %></h3>
