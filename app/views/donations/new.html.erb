<%= form_for @donation do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.application.secrets.stripe_publishable_key %>"
    data-description="Your Donations"
    data-amount="100"
    data-panel-label="Donate {{amount}}"></script>
<% end %>
<script>
  $("#donation_amount").change(function() {
    var amount = $(this).val();
    $(".stripe-button").attr("data-amount", amount);
  });
</script>
